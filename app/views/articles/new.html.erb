<h1>New Article</h1>

<%= form_with model: @article do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-light"%>
<% end %>

